extends  ../_skeleton

//- Includes
include ../sections/_header-classic
include ../components/_ui-thumbnail
include ../sections/_footer-classic

block variables
	- var activeCategory = 'pages'
	- var pageName = 'Buttons'

block page 
	// Page Header
	+navbar-classic({
		logo: logo.default
	})
		.col-6
			+thumbnail-creative({
				img: 'project-1-195x164',
				imgOriginal: 'project-1-1200x800-original'
			})
		.col-6
			+thumbnail-creative({
				img: 'project-2-195x164',
				imgOriginal: 'project-2-1200x800-original'
			})
		.col-6
			+thumbnail-creative({
				img: 'project-3-195x164',
				imgOriginal: 'project-3-1200x800-original'
			})
		.col-6
			+thumbnail-creative({
				img: 'project-4-195x164',
				imgOriginal: 'project-4-1200x800-original'
			})
		.col-6
			+thumbnail-creative({
				img: 'project-5-195x164',
				imgOriginal: 'project-5-1200x800-original'
			})
		.col-6
			+thumbnail-creative({
				img: 'project-6-195x164',
				imgOriginal: 'project-6-1200x800-original'
			})

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		bgImage: 'bg-typography'
	})

	// Button Sizes
	section.section.section-sm.section-first.bg-default.text-md-left
		.container
			h4.text-spacing-50.font-weight-bold Button Sizes
			.group-md.group-middle
				.button.button-lg.button-primary.button-winona Large size
				.button.button-primary.button-winona Medium size
				.button.button-sm.button-primary.button-winona Small size
	='\n'

	// Button Shapes
	section.section.section-sm.bg-default.text-md-left
		.container
			h4.text-spacing-50.font-weight-bold Buttons with icons
			.group-md.group-middle
				.button.button-lg.button-icon.button-icon-left.button-primary.button-winona
					span.icon.mdi.mdi-download
					span Icon left
				.button.button-lg.button-icon.button-icon-right.button-gray-800
					span.icon.mdi.mdi-chevron-right
					| Icon right
	='\n'

	// Buttons with Shadow
	section.section.section-sm.section-last.bg-default.text-md-left
		.container
			h4.text-spacing-50.font-weight-bold Button with shadow
			.group-md.group-middle
				.button.button-lg.button-primary.button-shadow.button-winona Shadow

	include ../sections/_section-newsletter
	// Page Footer
	+footer-classic({})